<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <changeSet author="maciejparapura" id="20201109_add_offer_table.xml">
        <createTable tableName="offers">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="loan_amount" type="DECIMAL(12, 2)">
                <constraints nullable="false" />
            </column>
            <column name="time_period" type="INT">
                <constraints nullable="false" />
            </column>
            <column name="interest_rate" type="FLOAT(4)">
                <constraints nullable="false" />
            </column>
            <column name="end_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
